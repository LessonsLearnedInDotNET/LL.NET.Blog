@model PostsPagedList
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-lg-12">
        @Html.Partial("_Pager")
    </div>
</div>

@foreach (var post in Model.Posts)
{
    @Html.Partial("_PostSummary", post)
}

<div class="row">
    <div class="col-lg-12">
        @Html.Partial("_Pager")
    </div>
</div>
