@model PostsPagedList
@{
    ViewData["Title"] = "Home Page";
}

<header class="intro-header" style="background-color: dimgray">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="site-heading">
                    <h2>Lessons Learned in .NET</h2>
                    <hr class="small">
                    <span class="subheading">Example use cases in .NET and related technologies</span>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="row">
    <div class="col-lg-12">
        @Html.Partial("_Pager")
    </div>
</div>

@foreach (var post in Model.Posts)
{
    @Html.Partial("_PostSummary", post)
}

<div class="row">
    <div class="col-lg-12">
        @Html.Partial("_Pager")
    </div>
</div>
